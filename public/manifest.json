{
  "manifest_version": 3,
  "name": "Hibiki Anime-ext",
  "description": "Track new anime & get episode alerts right in your browser.",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "notifications",
    "storage",
    "alarms"
  ],
  "host_permissions": ["https://api.shikimori.one/*"]
}
